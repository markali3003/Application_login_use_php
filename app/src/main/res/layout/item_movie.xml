<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/itemshapemovie"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_titleMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"></TextView>

    <ImageView
        android:id="@+id/id_imgMovie"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"></ImageView>

    <TextView
        android:id="@+id/id_infoMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"></TextView>

    <TextView
        android:id="@+id/id_typeMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

</LinearLayout>